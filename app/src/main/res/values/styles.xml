<resources>

    <style name="PlayerTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.FreelancerAuth" parent="@style/_FreelancerAuth" />
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="_FreelancerAuth" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.FreelancerAuth.NoActionBar" parent="@style/Theme.FreelancerAuth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@color/app_129af0</item>
        <item name="colorPrimaryDark">@color/app_129af0_dark</item>
        <item name="colorAccent">@color/app_129af0</item>
        <item name="colorPrimary">@color/app_129af0</item>
        <item name="windowActionBarOverlay">false</item>
    </style>


    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:editTextColor">@color/colorBrown</item>
    </style>



    <style name="divider_vertical">
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/linges_grey</item>
    </style>





    <style name="button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAllCaps">false</item>


    </style>


    <style name="ProgressBarSmall" >
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:progressBarStyleLarge">?android:attr/progressBarStyleLarge</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nav_item">
        <item name="android:layout_height">@dimen/nav_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text32pt</item>
        <item name="android:textColor">@color/label_normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="app_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text34pt</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>




    <style name="tv_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_808080</item>

    </style>

    <style name="edt_background_gray">
        <item name="android:textSize">@dimen/text30pt</item>

        <item name="android:layout_width">match_parent</item>

        <item name="android:textColor">@color/app_808080</item>
        <item name="android:textColorHint">@color/app_cecece</item>
        <item name="android:layout_height">@dimen/height_edit_text</item>
        <item name="android:padding">@dimen/padding_edit_text</item>
        <item name="android:background">@drawable/square_edit_text</item>
    </style>



    //grab

</resources>
